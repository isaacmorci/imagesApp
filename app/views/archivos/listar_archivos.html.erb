<h1>Servidor imagenes</h1>
<p>Lista de imagenes subidas</p>
<h2> Archivos </h2>
<% if @mensaje %>
<div>
   <strong> <%= @mensaje %> </strong>
</div>
<% end %>
<!-- Enlace a subir archivos -->
<p> <%= link_to "Subir imagen", :controller => "archivos", :action => "subir_archivos" %> </p>
<!-- Lista de imagenes -->
<ul>
   <% @archivos.each do |a| %>
   <% if a == "." or a == ".." then next end; %>
   <li>
      <strong> <%= a %> </strong> | 
      <a target="_blank" href="/archivos/<%= a %>"> Ver imagen </a> | 
      <%= link_to "Borrar imagen", {:controller => "archivos", :action => "borrar_archivos", :archivo_a_borrar => a}, {:method => "post", :confirm => "Seguro?"} %>
   </li>
   <% end %>
</ul>